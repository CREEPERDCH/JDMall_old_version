<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creeperdch.jdmall">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JDMallApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ActivityAnimTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/ActivityAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".activity.RegistActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".mvp.view.ResetActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"></activity>
        <activity android:name=".activity.ProductListActivity"></activity>
        <activity android:name=".activity.ProductDetailsActivity"></activity>
        <activity android:name=".activity.SettleActivity"></activity>
        <activity android:name=".activity.AddressListActivity"></activity>
        <activity android:name=".activity.AddressAddActivity"></activity>
        <activity android:name=".activity.OrderListActivity"></activity>
    </application>

</manifest>